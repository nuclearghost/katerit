<!DOCTYPE html>
<html>
<head>
  <title>kater.it</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar">
	<div class="navbar-inner">
		<%= link_to "kater.it", "/", :class=>"brand" %>
		<ul class="nav">
			<% if user_signed_in? %>
				<li><%= link_to "Hello #{current_user.email}", user_url(current_user.id) %></li>
				<li class="pull-right"><%= link_to "Sign Out", destroy_user_session_url, :method => :delete %></li>
			<% else %>
				<li><%= link_to "Sign In", new_user_session_url %></li>
				<li><%= link_to "Sign Up", new_user_registration_url %></li>
			<% end %>
		</ul>
	</div>
</div>

<%= yield %>

</body>
</html>
