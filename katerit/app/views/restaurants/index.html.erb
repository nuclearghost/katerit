<h1>Listing restaurants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.address %></td>
    <td><%= restaurant.phone %></td>
    <td><%= mail_to restaurant.email %></td>
    <td><%= link_to restaurant.website, restaurant.website %></td>
    <td><%= link_to 'Show', restaurant %></td>
    <% if can? :update, Restaurant %>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <% end %>
    <% if can? :destroy, Restaurant %>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Restaurant %>
    <%= link_to 'New Restaurant', new_restaurant_path %>
<% end %>
