<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
	<b>Roles:</b>
	<ul>
		<% @user.roles.each do |role| %>
		<li><%= role.name %></li>
		<% end %>
	</ul>
</p>

<% if current_user.role? :owner %>

<p>
	<b>Restaurants:</b>
	<ul>
		<% @user.restaurants.each do |restaurant| %>
		<li><%= restaurant.name %></li>
		<% end %>
	</ul>
</p>

<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>